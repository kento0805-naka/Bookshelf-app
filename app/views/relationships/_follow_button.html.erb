
  <% if current_user.following?(user) %>
    <%= form_with(url: relationship_path(follow_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-small btn-outline-danger follow_btn' %>
    <% end %>
  <% else %>
    <%= form_with(url: relationships_path, local: true) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Follow', class: 'btn btn-small btn-outline-info follow_btn' %>
    <% end %>
  <% end %>
