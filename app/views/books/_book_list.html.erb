  <% @books.each do |book| %>
    <div class="list">
        <% if book.image_url %>
          <%= link_to (image_tag(book.image_url, style: "width: 70px;height: 100px;display: inline-block;")), book.item_url %>
        <%end%>
        <%= book.title %>
        <%= book.author %>
        <%= form_with(model: @book, method: :post) do |f| %>
          <%= f.hidden_field :title, value: book.title %>
          <%= f.hidden_field :author, value: book.author %>
          <%= f.hidden_field :image_url, value: book.image_url %>
          <%= f.hidden_field :item_url, value: book.item_url %>
          <%= f.submit '追加する', class: 'btn btn-primary' %>
        <% end %>
    </div>
  <% end %>
