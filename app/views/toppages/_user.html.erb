<div class='user_container row'>
  <% users.each do |user| %>
    
      <div class='col-sm-3 user_box'>
        <div class='user_info_img'>
          <%= render 'users/user_image', user: user%>
        </div>
        <h5><%= user.name %></h5>
      </div>
      
   
  <% end %>
</div>
<div class='more_users row'>
  <div class='offset-sm-10 col-sm-2'>
    <%= link_to 'もっとみる　', users_path %><i class="fas fa-angle-double-right"></i>
  </div>
</div>