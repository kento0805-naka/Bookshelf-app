<%= form_for(@user) do |f| %>
   <% if @user.profile_img? %>
      <%= image_tag @user.profile_img.thumb.url %>
   <% else %>
      <i class="far fa-user-circle "></i>
   <% end %>
      <button type="button" class="btn btn-outline-secondary rounded-pill">
         <%= f.file_field :profile_img %>
      </button>
　　<%= f.submit '更新する', class: 'btn btn-primary' %>
<% end %>